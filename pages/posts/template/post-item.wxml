<template name="postItem">
<view class="post-container">
    <view class="post-author-data">
      <image wx:if="{{item.img_condition}}" class="post-author" src='{{item.avatar}}'></image>
      <text class="post-date">{{item.date}}</text>
    </view>
    <view >
      <text class='post-title'>{{item.title}}</text>
      <image class='post-image' src='{{item.imgsrc}}'></image>
      <text class='post-content'>{{item.content}}</text>
    </view>
    <view class='post-like'>
      <image class='post-like-image' src='{{item.collecting_img}}'></image>
      <text class='post-like-font'>{{item.collecting}}</text>
      <image class='post-like-image' src='{{item.reading_img}}'></image>
      <text class='post-like-font'>{{item.reading}}</text>
    </view>
</view>
</template>