<view>
  <swiper indicator-dots='true' autoplay='true'>
    <swiper-item><image src='/images/wx.png'></image></swiper-item>
    <swiper-item><image src='/images/vr.png'></image></swiper-item>
    <swiper-item><image src='/images/iqiyi.png'></image></swiper-item>
  </swiper>
  <block wx:for="{{post_content}}" wx:key="*this" wx:for-item="item">
  <view class="post-container">
    <view class="post-author-data">
      <image wx:if="{{item.img_condition}}" class="post-author" src='{{item.img.avatar_image}}'></image>
      <text class="post-date">{{item.date}}</text>
    </view>
    <view >
      <text class='post-title'>{{item.title}}</text>
      <image class='post-image' src='{{item.img.post_img}}'></image>
      <text class='post-content'>{{item.content}}</text>
    </view>
      <view class='post-like'>
        <image class='post-like-image' src='{{item.img.view_img}}'></image>
        <text class='post-like-font'>{{item.collect_num}}</text>
        <image class='post-like-image' src='{{item.img.chat_img}}'></image>
        <text class='post-like-font'>{{item.view_num}}</text>
      </view>
  </view>
  </block>
</view>